version: '3.8'

services:
  # 1. Database
  mysql-db:
    image: mysql:8.0
    container_name: mysql-db
    environment:
      - MYSQL_ROOT_PASSWORD=${DB_PASSWORD:-Ravikiran@123}
      - MYSQL_DATABASE=usermanagementmodule
    ports:
      - "3307:3306"
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - hotel-network
    restart: always
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 20s
      retries: 10

  # 2. Backend (Spring Boot)
  backend:
    build: ./backend-hotellux
    container_name: spring-backend
    ports:
      - "9191:9191"
    depends_on:
      mysql-db:
        condition: service_healthy
    environment:
      - DB_HOST=mysql-db
      - DB_USER=root
      - DB_PASSWORD=${DB_PASSWORD:-Ravikiran@123}
      - JWT_SECRET=${JWT_SECRET:-mySuperSecretKey123!}
      - JWT_EXPIRATION=3600000
    networks:
      - hotel-network
    restart: always

  # 3. Frontend (Angular)
  frontend:
    build: ./frontend-hotellux
    container_name: angular-frontend
    ports:
      - "80:80"
    depends_on:
      - backend
    networks:
      - hotel-network
    restart: always

  # 4. Prometheus
  prometheus:
    image: prom/prometheus:latest
    container_name: prometheus
    ports:
      - "9090:9090"
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/prometheus
    networks:
      - hotel-network
    restart: always

  # 5. Grafana
  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    ports:
      - "3000:3000"
    volumes:
      - grafana_data:/var/lib/grafana
    networks:
      - hotel-network
    restart: always

  # 6. Blackbox Exporter (NEW SERVICE)
  blackbox-exporter:
    image: prom/blackbox-exporter:latest
    container_name: blackbox-exporter
    ports:
      - "9115:9115"
    networks:
      - hotel-network
    restart: always

networks:
  hotel-network:
    driver: bridge

volumes:
  mysql_data:
  prometheus_data:
  grafana_data:
